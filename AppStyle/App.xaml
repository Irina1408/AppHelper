<Application x:Class="AppStyle.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
         <ResourceDictionary>
             <ResourceDictionary.MergedDictionaries>
                 
                 <!-- Colors -->
                 <ResourceDictionary Source="Themes/Blue.xaml"></ResourceDictionary>
                 <!-- Window style -->
                 <ResourceDictionary Source="Styles/WindowStyle.xaml"></ResourceDictionary>
                <!-- Other controls -->
                <ResourceDictionary Source="Styles/Button.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Styles/Label.xaml"></ResourceDictionary>
                 
            </ResourceDictionary.MergedDictionaries>
         </ResourceDictionary>
    </Application.Resources>
</Application>
