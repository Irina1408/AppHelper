<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type ListBox}">
        <Setter Property="Background" Value="{DynamicResource ListBoxGeneralBackground}"/>
        <Setter Property="MinWidth" Value="250"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Foreground" Value="{DynamicResource ListBoxGeneralForeground}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ListBoxGeneralBorderBrush}"/>
        <Setter Property="MinHeight" Value="30"/>
        <Setter Property="Height" Value="Auto"/>
        <Setter Property="FontSize" Value="{DynamicResource DefaultFontSize}"/>
    </Style>

</ResourceDictionary>